<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5">
    	<include
    	    layout="@layout/pub_activity_select_type_header" />

    </LinearLayout>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:scrollbars="none">
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="top|center_horizontal"
	        android:orientation="vertical"
	        android:paddingTop="10dp"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp" >
	
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="#E7EFEF"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12dp"
		            android:text="活动标题" />
	
		        <EditText
		            android:id="@+id/editText1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:background="@drawable/pa_add_info_edittext_bg"
		            android:hint="活动标题不能超过100字"
		            android:padding="2dp"
		            android:textSize="12dp" >
		
		            <requestFocus />
		        </EditText>
			</LinearLayout>
	
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:layout_marginTop="10dp"
		        android:background="#E7EFEF"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12dp"
		            android:text="费用估算" />
	
		        <EditText
		            android:id="@+id/editText2"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:background="@drawable/pa_add_info_edittext_bg"
		            android:hint="每人需要费用 或 者免费"
		            android:padding="2dp"
		            android:textSize="12dp" >
		
		        </EditText>
			</LinearLayout>
			
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:background="#E7EFEF"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12dp"
		            android:text="开始时间" />
	
		        <EditText
		            android:id="@+id/editText3"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:background="@drawable/pa_add_info_edittext_bg"
		            android:hint="请输入开始时间"
		            android:padding="2dp"
		            android:textSize="12dp" >
		        </EditText>
			</LinearLayout>
			
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:background="#E7EFEF"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12dp"
		            android:text="结束时间" />
	
		        <EditText
		            android:id="@+id/editText4"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:background="@drawable/pa_add_info_edittext_bg"
		            android:hint="请输入结束时间"
		            android:padding="2dp"
		            android:textSize="12dp" >
		        </EditText>
			</LinearLayout>
			
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:background="#E7EFEF"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12dp"
		            android:text="活动地点" />
	
		        <EditText
		            android:id="@+id/editText5"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:background="@drawable/pa_add_info_edittext_bg"
		            android:hint="请输入活动地点"
		            android:padding="2dp"
		            android:textSize="12dp" >
		        </EditText>
			</LinearLayout>
			
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:background="#E7EFEF"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="top"
		            android:textSize="12dp"
		            android:text="活动描述" />
	
		        <EditText
		            android:id="@+id/editText6"
		            android:layout_width="match_parent"
		            android:layout_height="80dp"
		            android:layout_gravity="top"
		            android:layout_marginLeft="10dp"
		            android:background="@null"
		            android:ems="10"
		            android:gravity="top"
		            android:hint="请输入活动描述"
		            android:inputType="textMultiLine"
		            android:padding="2dp"
		            android:textSize="12dp" />
	
			</LinearLayout>
			
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView7"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12dp"
		            android:text="活动图片：" />
	
		        <Button
		            android:id="@+id/button1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/pa_add_info_pic_add_selector"/>
	
			</LinearLayout>
			
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:padding="5dp" >
	
		        <TextView
		            android:id="@+id/textView8"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="12dp"
		            android:text="活动圈子：" />
	
		        <CheckBox
		            android:id="@+id/checkBox1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:checked="true"
		            style="@style/CheckBox_1"
		            />
		        
				<TextView
		            android:id="@+id/textView10"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:textSize="12dp"
		            android:text="同步开通" />
		        
				<TextView
		            android:id="@+id/textView11"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="8dp"
		            android:textColor="#a7afb2"
		            android:text="（开通圈子后可以管理和调整圈子）" />
			</LinearLayout>
	    </LinearLayout>
	</ScrollView>
	
    <LinearLayout
        android:id="@+id/aa_ai_linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#E9F0F3" >
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:layout_weight="1">

	        <Button
	            android:id="@+id/btn_pub_activity"
	            android:layout_width="130dp"
	            android:layout_height="40dp"
	            android:background="@drawable/btn_green_1_selector"
	            android:text="发布"
	            android:textSize="16dp"
	            android:textColor="#FFFFFF" />
	        
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:layout_weight="1">

	        <Button
	            android:id="@+id/button2"
	            android:layout_width="130dp"
	            android:layout_height="40dp"
	            android:textColor="#FFFFFF"
	            android:textSize="16dp"
	            android:background="@drawable/btn_red_1_selector"
	            android:text="取消" />
	        
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>